		$http.get("/v/json/company/"+compid).success(function(data){
			$scope.companies=data.children;}).error(function(data,status){
			$scope.alertzone="["+status+"] Ошибка загрузки компаний :( ["+data+"]"; });
			
		    }
		$scope.getVacancies();
		//$scope.getCompanyByID("1");
 }//control
